{% extends "layout.njk" %}

{% set pageTitle = article.title ~ " Â· " ~ site.title %}
{% set pageDescription = article.summary or site.description %}
{% set canonicalUrl = site.base_url ~ "/" ~ article.slug ~ ".html" %}
{% set ogType = "article" %}
{% set ogImage = article.image or "" %}

{% block content %}
  <article class="space-y-12">
    {% if article.image %}
    <div class="-mx-6 lg:-mx-12 xl:-mx-16 mb-12">
      <div class="relative h-96 lg:h-[32rem] xl:h-[36rem] overflow-hidden rounded-3xl">
        <div class="absolute inset-0 bg-gradient-to-t from-slate-900/60 via-slate-900/20 to-transparent z-10"></div>
        <img src="{{ article.image }}" alt="{{ article.title }}" class="w-full h-full object-cover" />
      </div>
    </div>
    {% endif %}
    
    <header class="space-y-6 pb-12 border-b border-slate-200">
      <div class="space-y-4">
        <time class="inline-block text-sm font-medium text-slate-500 tracking-wide">{{ (article.published_at * 1000) | date("Y-m-d") }}</time>
        <h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold tracking-tight text-slate-900 leading-tight">{{ article.title }}</h1>
      </div>
      
      {% if article.tags.length %}
        <div class="flex flex-wrap gap-2">
          {% for tag in article.tags %}
            <a href="/tags/{{ tag }}/" class="group relative inline-flex items-center rounded-full border border-slate-200 bg-slate-50 px-4 py-2 text-sm font-medium text-slate-700 hover:border-blue-300 hover:bg-blue-50 hover:text-blue-700 transition-all duration-300">
              <span class="relative">#{{ tag }}</span>
            </a>
          {% endfor %}
        </div>
      {% endif %}
    </header>

    <div class="prose prose-lg xl:prose-xl max-w-none">
      {{ article.html | safe }}
    </div>
  </article>

  {% if article.comments.length %}
    <section class="mt-20 pt-16 border-t border-slate-200 space-y-8">
      <div class="space-y-2">
        <h2 class="text-3xl lg:text-4xl font-bold tracking-tight text-slate-900">Comments</h2>
        <p class="text-slate-500">{{ article.comments.length }} {{ 'comment' if article.comments.length == 1 else 'comments' }}</p>
      </div>
      
      <div class="space-y-6">
        {% for comment in article.comments %}
          <div class="group rounded-2xl border border-slate-200 bg-white p-6 hover:border-blue-300 hover:shadow-lg hover:shadow-blue-500/5 transition-all duration-300">
            <div class="flex items-start gap-4">
              {% if comment.author_picture %}
                <img src="{{ comment.author_picture }}" alt="{{ comment.author_name or 'Anonymous' }}" class="w-12 h-12 rounded-full ring-2 ring-slate-200 group-hover:ring-blue-300 transition-all duration-300" loading="lazy" />
              {% else %}
                <div class="w-12 h-12 rounded-full bg-gradient-to-br from-slate-100 to-slate-200 flex items-center justify-center text-slate-600 text-sm font-medium ring-2 ring-slate-200 group-hover:ring-blue-300 transition-all duration-300">
                  {{ (comment.author_name or comment.pubkey)[0] | upper }}
                </div>
              {% endif %}
              <div class="flex-1 min-w-0 space-y-2">
                <div class="flex items-baseline gap-3">
                  <span class="font-semibold text-slate-900">{{ comment.author_name or comment.pubkey.slice(0, 8) + '...' }}</span>
                  <time class="text-xs font-medium text-slate-500">{{ (comment.created_at * 1000) | date("Y-m-d") }}</time>
                </div>
                <p class="text-base text-slate-700 whitespace-pre-wrap break-words leading-relaxed">{{ comment.content }}</p>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </section>
  {% endif %}
{% endblock %}
