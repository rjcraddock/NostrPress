{% extends "layout.njk" %}

{% set pageTitle = article.title ~ " Â· " ~ site.title %}
{% set pageDescription = article.excerpt or article.summary or site.description %}
{% set canonicalUrl = (site.base_url ~ "/" ~ article.slug ~ ".html") if site.base_url else "" %}
{% set ogType = "article" %}
{% set ogImage = article.image or "" %}

{% block content %}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": {{ article.title | dump | safe }},
  "image": [
    {% if article.image %}"{{ article.image }}"{% endif %}
  ],
  "datePublished": "{{ article.published_at | date('iso') }}",
  {% if article.modified_at %}"dateModified": "{{ article.modified_at | date('iso') }}",{% else %}"dateModified": "{{ article.published_at | date('iso') }}",{% endif %}
  "author": {
    "@type": "Person",
    "name": "{{ author.profile.display_name or author.profile.name }}",
    "url": "{{ site.base_url }}/" 
  },
  "publisher": {
    "@type": "Organization",
    "name": "{{ site.title }}",
    "logo": {
      "@type": "ImageObject",
      "url": "{{ author.profile.picture }}"
    }
  },
  {% if article.summary %}"description": {{ article.summary | dump | safe }},{% endif %}
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "{{ canonicalUrl }}"
  }
}
</script>

  <article class="space-y-12" itemscope itemtype="https://schema.org/BlogPosting">
    <meta itemprop="headline" content="{{ article.title }}" />
    <meta itemprop="description" content="{{ pageDescription }}" />
    <meta itemprop="datePublished" content="{{ article.published_at | date('iso') }}" />
    {% if article.modified_at %}
    <meta itemprop="dateModified" content="{{ article.modified_at * 1000 | date('iso') }}" />
    {% endif %}
    <meta itemprop="author" content="{{ author.profile.display_name or author.profile.name }}" />
    {% if article.image %}
    <meta itemprop="image" content="{{ article.image }}" />
    {% endif %}
    
    {% if article.image %}
    <div class="-mx-6 lg:-mx-12 xl:-mx-16 mb-12">
      <div class="relative h-96 lg:h-[32rem] xl:h-[36rem] overflow-hidden rounded-3xl">
        <div class="absolute inset-0 bg-gradient-to-t from-slate-900/60 via-slate-900/20 to-transparent z-10"></div>
        <img src="{{ article.image }}" alt="{{ article.title }}" class="w-full h-full object-cover" itemprop="image" />
      </div>
    </div>
    {% endif %}
    
    <header class="space-y-6 pb-12 border-b border-slate-200">
      <div class="space-y-4">
        <div class="flex items-center gap-4 text-sm font-medium text-slate-500">
          <time datetime="{{ article.published_at | date('iso') }}" itemprop="datePublished" class="tracking-wide">
            {{ article.published_at | date("Y-m-d") }}
          </time>
          {% if article.readingTime %}
          <span class="flex items-center gap-1" aria-label="Estimated reading time">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            {{ article.readingTime }} min read
          </span>
          {% endif %}
          {% if article.wordCount %}
          <span class="flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
            </svg>
            {{ article.wordCount }} words
          </span>
          {% endif %}
        </div>
        {% if article.title and article.title != "Untitled" %}
	<h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold tracking-tight text-slate-900 leading-tight" itemprop="headline">{{ article.title }}</h1>
	{% endif %}
      </div>
      
      {% if article.tags.length %}
        <div class="flex flex-wrap gap-2" aria-label="Article tags">
          {% for tag in article.tags %}
            <a href="{{ site.base_url }}/tags/{{ tag }}/" class="group relative inline-flex items-center rounded-full border border-slate-200 bg-slate-50 px-4 py-2 text-sm font-medium text-slate-700 hover:border-blue-300 hover:bg-blue-50 hover:text-blue-700 transition-all duration-300" itemprop="keywords">
              <span class="relative">#{{ tag }}</span>
            </a>
          {% endfor %}
        </div>
      {% endif %}

      <!-- Social Share Buttons -->
      <div class="flex flex-wrap gap-3 pt-4 border-t border-slate-100">
        <span class="text-sm font-medium text-slate-600">Share:</span>
        <a href="https://twitter.com/intent/tweet?text={{ pageTitle | urlencode }}&url={{ canonicalUrl | urlencode }}" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-3 py-1.5 text-sm font-medium text-slate-700 hover:text-blue-600 transition-colors duration-200" aria-label="Share on Twitter">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path>
          </svg>
          Twitter
        </a>
        <a href="https://t.me/share/url?url={{ canonicalUrl | urlencode }}&text={{ pageTitle | urlencode }}" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-3 py-1.5 text-sm font-medium text-slate-700 hover:text-blue-600 transition-colors duration-200" aria-label="Share on Telegram">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"></path>
          </svg>
          Telegram
        </a>
        <a href="https://www.facebook.com/sharer/sharer.php?u={{ canonicalUrl | urlencode }}" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-3 py-1.5 text-sm font-medium text-slate-700 hover:text-blue-600 transition-colors duration-200" aria-label="Share on Facebook">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"></path>
          </svg>
          Facebook
        </a>
        <a href="https://www.linkedin.com/shareArticle?mini=true&url={{ canonicalUrl | urlencode }}&title={{ pageTitle | urlencode }}" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-3 py-1.5 text-sm font-medium text-slate-700 hover:text-blue-600 transition-colors duration-200" aria-label="Share on LinkedIn">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
          </svg>
          LinkedIn
        </a>
        <button onclick="navigator.clipboard.writeText(window.location.href); this.textContent='Copied!'; setTimeout(() => this.textContent='Copy Link', 2000)" class="inline-flex items-center gap-2 px-3 py-1.5 text-sm font-medium text-slate-700 hover:text-blue-600 transition-colors duration-200" aria-label="Copy link">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
          </svg>
          Copy Link
        </button>
      </div>

      <!-- Open elsewhere -->
      {% if article.naddr %}
      <div class="flex flex-wrap gap-3 pt-4 border-t border-slate-100">
        <span class="text-sm font-medium text-slate-600">Open on:</span>
        
        <a href="https://habla.news/a/{{ article.naddr }}" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-3 py-1.5 text-sm font-medium text-slate-700 hover:text-purple-600 hover:bg-purple-50 rounded-lg transition-all duration-200">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"></path></svg>
          Habla
        </a>

        <a href="https://yakihonne.com/article/{{ article.naddr }}" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-3 py-1.5 text-sm font-medium text-slate-700 hover:text-orange-600 hover:bg-orange-50 rounded-lg transition-all duration-200">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"></path></svg>
          Yakihonne
        </a>

        <a href="https://primal.net/e/{{ article.naddr }}" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-3 py-1.5 text-sm font-medium text-slate-700 hover:text-pink-600 hover:bg-pink-50 rounded-lg transition-all duration-200">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm4.5 17.5h-9v-11h9v11z"/></svg> 
          Primal
        </a>
      </div>
      {% endif %}
    </header>

    <div class="prose prose-lg xl:prose-xl max-w-none" itemprop="articleBody">
      {{ article.html | safe }}
    </div>
  </article>

  <!-- Related Articles -->
  {% if relatedArticles.length %}
    <section class="mt-20 pt-16 border-t border-slate-200 space-y-8" aria-labelledby="related-articles-heading">
      <h2 id="related-articles-heading" class="text-3xl lg:text-4xl font-bold tracking-tight text-slate-900">Related Articles</h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for related in relatedArticles %}
          <article class="group rounded-2xl border border-slate-200 bg-white overflow-hidden hover:border-blue-300 hover:shadow-lg hover:shadow-blue-500/5 transition-all duration-300">
            {% if related.image %}
              <a href="{{ site.base_url }}/{{ related.slug }}.html" class="block relative h-48 overflow-hidden">
                <img src="{{ related.image }}" alt="{{ related.title }}" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" loading="lazy" />
              </a>
            {% endif %}
            <div class="p-6 space-y-3">
              <a href="{{ site.base_url }}/{{ related.slug }}.html" class="block">
                {% if related.title and related.title != "Untitled" %}
		  <h3 class="text-xl font-bold text-slate-900 group-hover:text-blue-600 transition-colors duration-200 line-clamp-2">{{ related.title }}</h3>
		{% else %}
		  <h3 class="text-xl font-bold text-slate-900 group-hover:text-blue-600 transition-colors duration-200 line-clamp-2">Note from {{ related.published_at | date("Y-m-d") }}</h3>
		{% endif %}
              </a>
              {% if related.excerpt %}
                <p class="text-sm text-slate-600 line-clamp-3">{{ related.excerpt }}</p>
              {% endif %}
              <div class="flex items-center gap-3 text-xs text-slate-500 pt-2">
                <time datetime="{{ related.published_at | date('iso') }}">{{ related.published_at | date("Y-m-d") }}</time>
                {% if related.readingTime %}
                  <span>{{ related.readingTime }} min read</span>
                {% endif %}
              </div>
            </div>
          </article>
        {% endfor %}
      </div>
    </section>
  {% endif %}

  {% if article.comments.length %}
    <section class="mt-20 pt-16 border-t border-slate-200 space-y-8" aria-labelledby="comments-heading">
      <div class="space-y-2">
        <h2 id="comments-heading" class="text-3xl lg:text-4xl font-bold tracking-tight text-slate-900">Comments</h2>
        <p class="text-slate-500">{{ article.comments.length }} {{ 'comment' if article.comments.length == 1 else 'comments' }}</p>
      </div>
      
      <div class="space-y-6">
        {% for comment in article.comments %}
          <article class="group rounded-2xl border border-slate-200 bg-white p-6 hover:border-blue-300 hover:shadow-lg hover:shadow-blue-500/5 transition-all duration-300">
            <div class="flex items-start gap-4">
              {% if comment.author_picture %}
                <img src="{{ comment.author_picture }}" alt="{{ comment.author_name or 'Anonymous' }}" class="w-12 h-12 rounded-full ring-2 ring-slate-200 group-hover:ring-blue-300 transition-all duration-300" loading="lazy" />
              {% else %}
                <div class="w-12 h-12 rounded-full bg-gradient-to-br from-slate-100 to-slate-200 flex items-center justify-center text-slate-600 text-sm font-medium ring-2 ring-slate-200 group-hover:ring-blue-300 transition-all duration-300" aria-label="Commenter avatar">
                  {{ (comment.author_name or comment.pubkey)[0] | upper }}
                </div>
              {% endif %}
              <div class="flex-1 min-w-0 space-y-2">
                <div class="flex items-baseline gap-3">
                  <span class="font-semibold text-slate-900">{{ comment.author_name or comment.pubkey.slice(0, 8) + '...' }}</span>
                  <time datetime="{{ comment.created_at * 1000 | date('iso') }}" class="text-xs font-medium text-slate-500">{{ (comment.created_at * 1000) | date("Y-m-d") }}</time>
                </div>
                <p class="text-base text-slate-700 whitespace-pre-wrap break-words leading-relaxed">{{ comment.content }}</p>
              </div>
            </div>
          </article>
        {% endfor %}
      </div>
    </section>
  {% endif %}
{% endblock %}
