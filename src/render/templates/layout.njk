<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ pageTitle }}</title>
    <meta name="description" content="{{ pageDescription }}" />
    <link rel="canonical" href="{{ canonicalUrl }}" />

    <meta property="og:title" content="{{ pageTitle }}" />
    <meta property="og:description" content="{{ pageDescription }}" />
    <meta property="og:type" content="{{ ogType }}" />
    <meta property="og:url" content="{{ canonicalUrl }}" />
    {% if ogImage %}
    <meta property="og:image" content="{{ ogImage }}" />
    {% endif %}

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="{{ pageTitle }}" />
    <meta name="twitter:description" content="{{ pageDescription }}" />
    {% if ogImage %}
    <meta name="twitter:image" content="{{ ogImage }}" />
    {% endif %}

    <link rel="stylesheet" href="/css/site.css" />
  </head>
  <body class="bg-slate-950 text-slate-100">
    <div class="flex min-h-screen">
      <!-- Sidebar: 1/4 width, sticky -->
      <aside class="w-1/4 border-r border-slate-800 p-6 sticky top-0 h-screen overflow-y-auto">
        <div class="space-y-6">
          <div>
            <a href="/" class="text-2xl font-semibold text-white hover:text-slate-300 transition-colors">{{ site.title }}</a>
            <p class="mt-2 text-sm text-slate-400">{{ site.description }}</p>
          </div>

          {% if author %}
          <div class="pt-6 border-t border-slate-800">
            {% if author.profile.picture %}
              <img class="h-20 w-20 rounded-full object-cover mb-4" src="{{ author.profile.picture }}" alt="Profile picture" />
            {% endif %}
            <h2 class="text-lg font-semibold text-white">{{ author.profile.display_name or author.profile.name or 'Author' }}</h2>
            {% if author.profile.about %}
              <p class="mt-2 text-sm text-slate-300 line-clamp-4">{{ author.profile.about }}</p>
            {% endif %}
            {% if author.npub %}
              <p class="mt-3 text-xs text-slate-500 break-all">{{ author.npub }}</p>
            {% endif %}
          </div>
          {% endif %}
        </div>
      </aside>

      <!-- Main content: 3/4 width -->
      <div class="w-3/4 flex flex-col">
        <main class="flex-1 px-8 py-10">
          {% block content %}{% endblock %}
        </main>

        <footer class="border-t border-slate-800 px-8 py-6">
          <p class="text-sm text-slate-400">Generated from Nostr using <a href="https://github.com/besoeasy/NostrPress" target="_blank" rel="noopener noreferrer" class="text-slate-300 hover:text-white underline">Nostr2Blog</a></p>
        </footer>
      </div>
    </div>

    <script src="/js/site.js" defer></script>
  </body>
</html>
