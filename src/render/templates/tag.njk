{% extends "layout.njk" %}

{% set pageTitle = "#" ~ tag ~ " Â· " ~ site.title %}
{% set pageDescription = "Articles tagged with #" ~ tag %}
{% set canonicalUrl = site.base_url ~ "/tags/" ~ tag ~ "/" %}
{% set ogType = "website" %}
{% set ogImage = "" %}

{% block content %}
  <div class="space-y-12">
    <header class="space-y-4">
      <div class="inline-flex items-center gap-3 rounded-full border border-blue-200 bg-blue-50 px-6 py-3">
        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
        </svg>
        <h1 class="text-2xl lg:text-3xl font-bold tracking-tight text-blue-700">#{{ tag }}</h1>
      </div>
      <div class="h-1 w-16 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-full"></div>
    </header>

    <div class="space-y-6">
      {% for article in articles %}
        <article class="group relative">
          <a href="/{{ article.slug }}.html" class="block">
            <div class="relative rounded-2xl border border-slate-200 bg-white overflow-hidden transition-all duration-500 ease-out hover:border-blue-300 hover:shadow-2xl hover:shadow-blue-500/10 hover:-translate-y-1">
              <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-blue-500/0 to-indigo-500/0 opacity-0 group-hover:opacity-5 transition-opacity duration-500"></div>
              
              {% if article.image %}
              <div class="relative h-56 lg:h-64 overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent z-10"></div>
                <img src="{{ article.image }}" alt="{{ article.title }}" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" loading="lazy" />
              </div>
              {% endif %}
              
              <div class="relative p-8 space-y-3">
                <time class="text-sm font-medium text-slate-500 tracking-wide">{{ (article.published_at * 1000) | date("Y-m-d") }}</time>
                
                <h2 class="text-2xl lg:text-3xl font-bold tracking-tight text-slate-900 group-hover:text-blue-600 transition-colors duration-300">
                  {{ article.title }}
                </h2>
                
                {% if article.summary %}
                  <p class="text-base text-slate-600 leading-relaxed line-clamp-2">{{ article.summary }}</p>
                {% endif %}
                
                <div class="flex items-center gap-2 text-blue-600 group-hover:text-blue-700 transition-colors duration-300">
                  <span class="text-sm font-medium">Read article</span>
                  <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </div>
            </div>
          </a>
        </article>
      {% endfor %}
    </div>
  </div>
{% endblock %}
