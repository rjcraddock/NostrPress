{% extends "layout.njk" %}

{% set pageTitle = site.title %}
{% set pageDescription = site.description %}
{% set canonicalUrl = site.base_url if site.base_url else "" %}
{% set ogType = "website" %}
{% set ogImage = articles[0].image if articles.length > 0 and articles[0].image else "" %}

{% block additionalHead %}
<!-- JSON-LD Structured Data for Website -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Blog",
  "name": "{{ site.title }}",
  "description": "{{ site.description }}",
  {% if site.base_url %}"url": "{{ site.base_url }}",{% endif %}
  {% if author %}"author": {
    "@type": "Person",
    "name": "{{ author.profile.display_name or author.profile.name }}",
    {% if author.profile.about %}"description": {{ author.profile.about | dump | safe }},{% endif %}
    {% if author.profile.picture %}"image": "{{ author.profile.picture }}",{% endif %}
    {% if author.profile.website %}"url": "{{ author.profile.website }}",{% endif %}
    "sameAs": [
      {% if author.npub %}"https://nosta.me/{{ author.npub }}"{% endif %}{% if author.profile.twitter %},{% endif %}
      {% if author.profile.twitter %}"https://twitter.com/{{ author.profile.twitter }}"{% endif %}{% if author.profile.github %},{% endif %}
      {% if author.profile.github %}"https://github.com/{{ author.profile.github }}"{% endif %}
    ]
  },{% endif %}
  "blogPost": [
    {% for article in articles | slice(0, 10) %}
    {
      "@type": "BlogPosting",
      "headline": {{ article.title | dump | safe }},
      {% if article.summary %}"description": {{ article.summary | dump | safe }},{% endif %}
      {% if site.base_url %}"url": "{{ site.base_url }}/{{ article.slug }}.html",{% endif %}
      "datePublished": "{{ article.published_at | date('iso') }}",
      {% if article.modified_at %}"dateModified": "{{ (article.modified_at * 1000) | date('iso') }}",{% endif %}
      {% if article.image %}"image": "{{ article.image }}",{% endif %}
      "author": {
        "@type": "Person",
        "name": "{{ author.profile.display_name or author.profile.name }}"
      },
      "publisher": {
        "@type": "Organization",
        "name": "{{ site.title }}"
        {% if author.profile.picture %},
        "logo": {
          "@type": "ImageObject",
          "url": "{{ author.profile.picture }}"
        }{% endif %}
      }
    }{% if not loop.last %},{% endif %}
    {% endfor %}
  ]
}
</script>

<!-- Breadcrumb Structured Data -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [{
    "@type": "ListItem",
    "position": 1,
    "name": "Home"
    {% if site.base_url %},"item": "{{ site.base_url }}"{% endif %}
  }]
}
</script>
{% endblock %}

{% block content %}
  <div class="space-y-12">
    <header>
      <h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold tracking-tight text-slate-900 mb-4">Latest</h1>
      <div class="h-1 w-16 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-full"></div>
    </header>

    <div class="space-y-8">
      {% for article in articles %}
        <article class="group relative">
          <a href="{{ site.base_url }}/{{ article.slug }}.html" class="block">
            <div class="relative rounded-2xl border border-slate-200 bg-white overflow-hidden transition-all duration-500 ease-out hover:border-blue-300 hover:shadow-2xl hover:shadow-blue-500/10 hover:-translate-y-1">
              <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-blue-500/0 to-indigo-500/0 opacity-0 group-hover:opacity-5 transition-opacity duration-500"></div>
              
              {% if article.image %}
              <div class="relative h-64 lg:h-80 overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent z-10"></div>
                <img src="{{ article.image }}" alt="{{ article.title }}" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" loading="lazy" />
              </div>
              {% endif %}
              
              <div class="relative p-8 lg:p-10 space-y-4">
                <div class="flex items-center gap-3">
                  <time class="text-sm font-medium text-slate-500 tracking-wide">{{ article.published_at | date("Y-m-d") }}</time>
                  {% if article.tags.length %}
                    <span class="text-slate-300">â€¢</span>
                    <div class="flex flex-wrap gap-2">
                      {% for tag in article.tags | slice(0, 2) %}
                        <span class="text-xs font-medium text-blue-600">#{{ tag }}</span>
                      {% endfor %}
                    </div>
                  {% endif %}
                </div>
                
		{% if article.title and article.title != "Untitled" %}
  		<h2 class="text-2xl lg:text-3xl xl:text-4xl font-bold tracking-tight text-slate-900 group-hover:text-blue-600 transition-colors duration-300">
    		{{ article.title }}
  		</h2>
		{% endif %}
                
                {% if article.summary %}
                  <p class="text-base lg:text-lg text-slate-600 leading-relaxed line-clamp-2">{{ article.summary }}</p>
                {% endif %}
                
                <div class="flex items-center gap-2 text-blue-600 group-hover:text-blue-700 transition-colors duration-300">
                  <span class="text-sm font-medium">Read article</span>
                  <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </div>
            </div>
          </a>
        </article>
      {% endfor %}
    </div>
  </div>
{% endblock %}
