{% extends "layout.njk" %}

{% set pageTitle = site.title ~ " Â· " ~ (author.profile.display_name or author.profile.name or author.npub) %}
{% set pageDescription = author.profile.about or site.description %}
{% set canonicalUrl = (site.base_url ~ "/author/") if site.base_url else "" %}
{% set ogType = "profile" %}
{% set ogImage = author.profile.picture or "" %}

{% block content %}
  <div class="space-y-12">
    <header class="rounded-3xl border border-slate-200 bg-white p-10 lg:p-12">
      <div class="flex flex-col lg:flex-row items-start gap-8">
        {% if author.profile.picture %}
          <div class="relative group">
            <div class="absolute -inset-2 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-full opacity-10 blur-lg group-hover:opacity-20 transition-opacity duration-500"></div>
            <img class="relative h-32 w-32 lg:h-40 lg:w-40 rounded-full object-cover ring-4 ring-slate-200 transition-transform duration-300 group-hover:scale-105" src="{{ author.profile.picture }}" alt="Profile picture" />
          </div>
        {% endif %}
        <div class="flex-1 space-y-4">
          <div class="space-y-2">
            <h1 class="text-4xl lg:text-5xl font-bold tracking-tight text-slate-900">{{ author.profile.display_name or author.profile.name or author.npub }}</h1>
            <p class="text-sm font-mono text-slate-500">{{ author.npub }}</p>
          </div>
          {% if author.profile.about %}
            <p class="text-base lg:text-lg text-slate-700 leading-relaxed max-w-3xl">{{ author.profile.about }}</p>
          {% endif %}
        </div>
      </div>
    </header>

    <div class="space-y-6">
      <div class="flex items-center gap-3">
        <h2 class="text-3xl font-bold tracking-tight text-slate-900">All Articles</h2>
        <div class="h-1 w-12 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-full"></div>
      </div>
      
      <div class="space-y-6">
        {% for article in articles %}
          <article class="group relative">
            <a href="/{{ article.slug }}.html" class="block">
              <div class="relative rounded-2xl border border-slate-200 bg-white overflow-hidden transition-all duration-500 ease-out hover:border-blue-300 hover:shadow-2xl hover:shadow-blue-500/10 hover:-translate-y-1">
                <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-blue-500/0 to-indigo-500/0 opacity-0 group-hover:opacity-5 transition-opacity duration-500"></div>
                
                {% if article.image %}
                <div class="relative h-56 lg:h-64 overflow-hidden">
                  <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent z-10"></div>
                  <img src="{{ article.image }}" alt="{{ article.title }}" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" loading="lazy" />
                </div>
                {% endif %}
                
                <div class="relative p-8 space-y-3">
                  <time class="text-sm font-medium text-slate-500 tracking-wide">{{ article.published_at | date("Y-m-d") }}</time>
                  
                  <h3 class="text-2xl lg:text-3xl font-bold tracking-tight text-slate-900 group-hover:text-blue-600 transition-colors duration-300">
                    {{ article.title }}
                  </h3>
                  
                  {% if article.summary %}
                    <p class="text-base text-slate-600 leading-relaxed line-clamp-2">{{ article.summary }}</p>
                  {% endif %}
                  
                  <div class="flex items-center gap-2 text-blue-600 group-hover:text-blue-700 transition-colors duration-300">
                    <span class="text-sm font-medium">Read article</span>
                    <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </div>
                </div>
              </div>
            </a>
          </article>
        {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}
